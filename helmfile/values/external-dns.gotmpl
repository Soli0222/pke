env:
  - name: CF_API_TOKEN
    valueFrom:
      secretKeyRef:
        name: cloudflare-api-token
        key: apiToken

managedRecordTypes: ["A", "AAAA", "CNAME", "TXT"]

sources:
  - service
  - ingress
  - crd
  - traefik-proxy

domainFilters: 
  - str08.net
  - soli0222.com
  - pstr.space

policy: sync

provider:
  name: cloudflare

serviceMonitor:
  enabled: true
