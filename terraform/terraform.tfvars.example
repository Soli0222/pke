# Proxmox Configuration
# Update these values according to your Proxmox setup

# Example SSH public key (replace with your actual key)
ssh_public_key = "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIGxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx user@example.com"

# Proxmox API credentials and endpoints
# You can also use environment variables:
# export TF_VAR_proxmox_hosts='{"kkg-pve1":{"password":"your_password"},"kkg-pve2":{"password":"your_password"},"kkg-pve3":{"password":"your_password"}}'

proxmox_hosts = {
  "kkg-pve1" = {
    api_url   = "https://192.168.20.2:8006/api2/json"
    user      = "root@pam"
    password  = "your_kkg_pve1_password"
    node_name = "kkg-pve1"
    storage   = "local-lvm"
  }
  "kkg-pve2" = {
    api_url   = "https://192.168.20.3:8006/api2/json"
    user      = "root@pam"
    password  = "your_kkg_pve2_password"
    node_name = "kkg-pve2"
    storage   = "local-lvm"
  }
  "kkg-pve3" = {
    api_url   = "https://192.168.20.4:8006/api2/json"
    user      = "root@pam"
    password  = "your_kkg_pve3_password"
    node_name = "kkg-pve3"
    storage   = "local-lvm"
  }
}

# Network configuration
network_bridge = "vmbr0"

# Default VM user
vm_user = "ubuntu"

# Cloud image URL (Ubuntu 24.04 minimal)
cloud_image_url = "https://cloud-images.ubuntu.com/minimal/releases/noble/release-20250727/ubuntu-24.04-minimal-cloudimg-amd64.img"
